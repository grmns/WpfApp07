<Window x:Class="WpfApp07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp07"
        mc:Ignorable="d"
        Title="Listar Productos" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBox x:Name="txtProductName" Width="200" Margin="0,0,10,0"/>
            <Button Content="Buscar" Click="SearchButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgProducts" Grid.Row="1" AutoGenerateColumns="True" Margin="10" CanUserAddRows="False"/>
    </Grid>
</Window>
